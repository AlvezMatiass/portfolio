---
const { titulo, url, imagen, habilidades } = Astro.props;

---

<div class="jobContainer">
  <p class="text-[18px] font-medium text-[#FFFCEE] py-3">{titulo}</p>
  <a href={url} target="_blank" class=" no-underline text-[#FFFCEE] " >
    <img src={imagen} alt="" class=" w-full "> 
  </a>
  <div class="flex flex-wrap gap-2 pt-3">
    {habilidades.map(h => <p class="bg-[#FFFCEE] text-[#161616] font-medium text-[10px] py-0.5 px-1.5 rounded-lg text-center ">{h}</p>)}
  </div>
</div>


<style>

    .span {
        background-color: #FFFCEE;
        color: #161616;
        font-weight: 600;
        font-size: 10px;
        padding: 2px 6px;
        border-radius: 10px;
        text-align: center;
    }
</style>